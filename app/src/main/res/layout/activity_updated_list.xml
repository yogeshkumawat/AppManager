<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.history.update.AppActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/admob_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clipToPadding="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_id_banner_header" />

    <ListView
        android:id="@+id/updatelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/admob_footer"
        android:layout_below="@+id/admob_header"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clipToPadding="true" />

    <TextView
        android:id="@+id/no_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No App has been updated yet"
        android:textColor="#000"
        android:textSize="16dp"
        android:visibility="gone" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/admob_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clipToPadding="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_id_banner_footer" />

</RelativeLayout>
